@model  IEnumerable<FitLogGo.Models.Session>

@{
    ViewBag.Title = "Sessions";
}

<h2>Sessions</h2>

<p>
    <a asp-controller="Sessions" asp-action="Create">Create New</a>
</p>

<table class="table">
    <tr>

        @*<th>User Id</th>*@
        <th>Session Date</th>
        <th>Session Weight</th>
        <th>Miles Traveled</th>
        <th>Total Minutes</th>
        <th>K/cal Burned</th>

    </tr>

    @foreach (var item in Model)
    {
        <tr>
            
            @*<td>
                @Html.DisplayFor(modelItem => item.SessionId)
            </td>*@
            @*<td>
                @Html.DisplayFor(modelItem => item.AppUserId)
            </td>*@
            <td>
                @Html.DisplayFor(modelItem => item.SessionDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SessionWeight)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MilesTraveled)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MinutesWorked)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CaloriesBurned)
            </td>

        </tr>
    }
</table>